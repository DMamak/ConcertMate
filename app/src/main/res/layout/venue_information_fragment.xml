<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.VenueInformationFragment">

    <TextView
        android:id="@+id/venue_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="696dp"
        android:background="@drawable/underline"
        android:text="@string/venue_name"
        android:textAlignment="viewStart"
        android:textColor="@color/heading"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/single_venue_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="696dp"
        android:maxLength="35"
        android:maxLines="1"
        android:paddingTop="3dp"
        android:textAlignment="center"
        android:textColor="@color/contextColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/venue_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/venue_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="636dp"
        android:background="@drawable/underline"
        android:text="@string/address"
        android:textAlignment="viewStart"
        android:textColor="@color/heading"
        android:textSize="22sp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/venue_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/single_venue_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="636dp"
        android:maxLength="35"
        android:maxLines="1"
        android:paddingTop="3dp"
        android:textAlignment="center"
        android:textColor="@color/contextColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/venue_address"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/venue_postcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="636dp"
        android:background="@drawable/underline"
        android:text="@string/postcode"
        android:textAlignment="viewStart"
        android:textColor="@color/heading"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/venue_address"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/single_venue_postcode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="636dp"
        android:maxLength="35"
        android:maxLines="1"
        android:paddingTop="3dp"
        android:textAlignment="center"
        android:textColor="@color/contextColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/venue_postcode"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/venue_parking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="636dp"
        android:background="@drawable/underline"
        android:paddingBottom="65dp"
        android:text="@string/parking"
        android:textAlignment="viewStart"
        android:textColor="@color/heading"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/venue_postcode"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/single_venue_parking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="134dp"
        android:layout_marginBottom="636dp"
        android:textAlignment="center"
        android:textColor="@color/contextColor"
        android:textSize="18sp"
        android:paddingTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/venue_parking"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:maxLength="170"/>

    <TextView
        android:id="@+id/venue_accessible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="636dp"
        android:background="@drawable/underline"
        android:text="@string/accessible"
        android:textAlignment="viewStart"
        android:textColor="@color/heading"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/venue_parking"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/single_venue_accessible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="237dp"
        android:layout_marginBottom="636dp"
        android:textAlignment="center"
        android:textColor="@color/contextColor"
        android:textSize="18sp"
        android:paddingTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/venue_accessible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:maxLength="170"/>

</android.support.constraint.ConstraintLayout>